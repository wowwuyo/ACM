#include<stdio.h>

int main()
{
	int str, end, iLoop, length, a, value;
	while(scanf("%d %d", &str, &end)==2){
		printf("%d %d", str, end);
		if( str>end){
			a=str;
			str=end;
			end=a;
		}
		a = 0;
		for( iLoop=str; iLoop<=end; iLoop++){
			length = 0;
			value=iLoop;
			while(value!=1){
				if( value%2){
					value*=3;
					value+=1;
				}
				else value/=2;
					length++;
			}
			if( length>a) a=length;
		}
		printf(" %d\n", a+1);
	}
	return 0;
}
